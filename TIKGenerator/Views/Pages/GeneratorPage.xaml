<Page x:Class="TIKGenerator.Views.Pages.GeneratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:local="clr-namespace:TIKGenerator.ViewModels"
      xmlns:signalType="clr-namespace:TIKGenerator.Models"
      Title="GeneratorPage">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0 0 15 0">
            <TextBlock Text="{DynamicResource Amplitude}"/>
            <TextBox x:Name="AmplitudeBox" Margin="0 0 0 10" Text="1"/>

            <TextBlock Text="{DynamicResource Frequency}"/>
            <TextBox x:Name="FrequencyBox" Margin="0 0 0 10" Text="1"/>

            <TextBlock Text="{DynamicResource Phase}"/>
            <TextBox x:Name="PhaseBox" Margin="0 0 0 10" Text="0"/>

            <TextBlock Text="{DynamicResource Points}"/>
            <TextBox x:Name="PointsBox" Margin="0 0 0 10" Text="50"/>

            <TextBlock Text="{DynamicResource TimeStart}"/>
            <TextBox x:Name="TimeStartBox" Margin="0 0 0 10" Text="0"/>

            <TextBlock Text="{DynamicResource TimeEnd}"/>
            <TextBox x:Name="TimeEndBox" Margin="0 0 0 10" Text="1"/>

            <TextBlock Text="{DynamicResource SignalType}"/>
            <ComboBox x:Name="SignalTypeBox" Margin="0 0 0 20">
                <ComboBoxItem Content="{DynamicResource SineWave}" 
                              Tag="{x:Static signalType:SignalType.SineWave}" 
                              IsSelected="True"/>
                <ComboBoxItem Content="{DynamicResource Meander}" 
                              Tag="{x:Static signalType:SignalType.Meander}"/>
                <ComboBoxItem Content="{DynamicResource Triangular}" 
                              Tag="{x:Static signalType:SignalType.Triangular}"/>
                <ComboBoxItem Content="{DynamicResource Sawtooth}" 
                              Tag="{x:Static signalType:SignalType.Sawtooth}"/>
            </ComboBox>

            <Button Content="{DynamicResource Generate}" x:Name="GenerateButton" Height="30" Margin="0 0 0 10"/>
            <Button Content="{DynamicResource Clear}" x:Name="ClearButton" Height="30"/>
        </StackPanel>

        <lvc:CartesianChart Grid.Column="1" x:Name="SignalChart"
                            Series="{Binding Series}"/>
    </Grid>
</Page>

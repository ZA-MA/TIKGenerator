<Page x:Class="TIKGenerator.Views.Pages.GeneratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:sp="clr-namespace:TIKGenerator.Views.Components.SignalProcessing"
      xmlns:prb="clr-namespace:TIKGenerator.Views.Components.ProgressBar"
      xmlns:local="clr-namespace:TIKGenerator.Views.Pages"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      Loaded="Page_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Text="{Binding SignalGroup.Name}"
            FontSize="18"
            FontWeight="Bold"/>

        <sp:SignalProcessing Grid.Row="1" Processing="{Binding Processing}"/>

        <Grid Grid.Row="2">
            <lvc:CartesianChart
                x:Name="cartesianChart"
                Series="{Binding Series}"
                XAxes="{Binding XAxes}"
                YAxes="{Binding YAxes}"
                LegendPosition="Bottom" 
                />

            <prb:ProgressBar x:Name="ProgressBarControl" Visibility="Collapsed"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,10">

            <mah:RangeSlider
                Width="250"
                Minimum="{Binding GlobalMinTime}"
                Maximum="{Binding GlobalMaxTime}"
                LowerValue="{Binding ViewStart, Mode=TwoWay}"
                UpperValue="{Binding ViewEnd, Mode=TwoWay}"
                TickPlacement="BottomRight"
                SmallChange="0.1"
                LargeChange="1"/>

            <TextBlock Text="{Binding ViewStart, StringFormat=0.00}" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Text=" - " VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ViewEnd, StringFormat=0.00}" Margin="0,0,5,0" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Среднее:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Mean}" Margin="5,0,10,0"/>
            <TextBlock Text="Макс:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Max}" Margin="5,0,10,0"/>
            <TextBlock Text="Мин:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Min}" Margin="5,0,10,0"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Content="Добавить сигнал"
                    Width="150"
                    HorizontalAlignment="Left"
                    Click="AddSignalButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    />
            
            <Button Content="Очистить"
                    Width="100"
                    HorizontalAlignment="Right"
                    Style="{StaticResource ButtonStyle}"
                    Click="ClearButton_Click"/>
            
            <Button Content="Сохранить"
                    Width="100"
                    HorizontalAlignment="Right"
                    Style="{StaticResource ButtonStyle}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>

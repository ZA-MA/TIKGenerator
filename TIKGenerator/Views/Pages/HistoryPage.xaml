<Page x:Class="TIKGenerator.Views.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TIKGenerator.Views.Pages"
      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      Height="Auto" Width="Auto"
      Title="HistoryPage" Loaded="HistoryPage_Loaded">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Text="{DynamicResource HistorySignals}"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                />

            <Button 
                Grid.Column="1"
                Content="{DynamicResource Import}"
                Command="{Binding DataContext.ImportGroupCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                Style="{StaticResource ButtonStyle}"
                Width="100"
                />
        </Grid>

        <ListBox ItemsSource="{Binding Groups}" Grid.Row="1" BorderBrush="Transparent">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>

                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Margin="2" Padding="5">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}" 
                                               FontSize="11" Foreground="Gray"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                                    <TextBlock Text="{DynamicResource SignalsCount}" />
                                    <TextBlock Text=" " Margin="3,0"/>
                                    <TextBlock Text="{Binding Signals.Count}" />
                                </StackPanel>

                                <Button Grid.Column="2" 
                                        Content="{DynamicResource Show}" 
                                        Command="{Binding DataContext.OpenGroupCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}" 
                                        Style="{StaticResource ButtonStyle}"
                                        Width="160"
                                        Height="20"
                                        Margin="10,0,0,0"/>

                                <Button Grid.Column="3" 
                                        Content="{DynamicResource Export}"
                                        Command="{Binding DataContext.ExportGroupCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}" 
                                        Style="{StaticResource ButtonStyle}"
                                        Width="60"
                                        Height="20"
                                        Margin="10,0,0,0"/>
                            </Grid>

                            <ItemsControl ItemsSource="{Binding Signals}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#DDD" BorderThickness="1" Margin="2" Padding="4">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0">
                                                    <Run Text="{DynamicResource SignalName}"/>
                                                    <Run Text="{Binding Name}"/>
                                                </TextBlock>

                                                <TextBlock Grid.Row="0" Grid.Column="1">
                                                    <Run Text="{DynamicResource SignalTypeName}"/>
                                                    <Run Text="{Binding Type}"/>
                                                </TextBlock>

                                                <TextBlock Grid.Row="0" Grid.Column="2">
                                                    <Run Text="{DynamicResource SignalAmplitude}"/>
                                                    <Run Text="{Binding Amplitude}"/>
                                                </TextBlock>

                                                <TextBlock Grid.Row="0" Grid.Column="3">
                                                    <Run Text="{DynamicResource SignalFrequency}"/>
                                                    <Run Text="{Binding Frequency}"/>
                                                </TextBlock>

                                                <TextBlock Grid.Row="1" Grid.Column="0">
                                                    <Run Text="{DynamicResource SignalPhase}"/>
                                                    <Run Text="{Binding Phase}"/>
                                                </TextBlock>

                                                <TextBlock Grid.Row="1" Grid.Column="1">
                                                    <Run Text="{DynamicResource SignalPoints}"/>
                                                    <Run Text="{Binding NumberOfPoints}"/>
                                                </TextBlock>

                                                <TextBlock Grid.Row="1" Grid.Column="2">
                                                    <Run Text="{DynamicResource SignalStart}"/>
                                                    <Run Text="{Binding TimeStart}"/>
                                                </TextBlock>

                                                <TextBlock Grid.Row="1" Grid.Column="3">
                                                    <Run Text="{DynamicResource SignalEnd}"/>
                                                    <Run Text="{Binding TimeEnd}"/>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="1" Background="#50FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <controls:ProgressRing Width="100" Height="100" IsActive="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="{DynamicResource Previous}" Click="Previous_Click" Style="{StaticResource ButtonStyle}" Width="50" Height="20" FontSize="10"/>
            
            <TextBlock Text="{Binding CurrentPage}" Margin="5" VerticalAlignment="Center"/>
            
            <TextBlock Text=" / " VerticalAlignment="Center"/>
          
            <TextBlock Text="{Binding TotalPages}" Margin="5" VerticalAlignment="Center"/>
            
            <Button Content="{DynamicResource Next}" Click="Next_Click" Style="{StaticResource ButtonStyle}" Width="50" Height="20" FontSize="10" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>

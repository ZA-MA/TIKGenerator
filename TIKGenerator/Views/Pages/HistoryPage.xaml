<Page x:Class="TIKGenerator.Views.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TIKGenerator.Views.Pages"
      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      Height="Auto" Width="Auto"
      Title="HistoryPage" Loaded="HistoryPage_Loaded">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

                <TextBlock 
                    Text="История сигналов"
                    VerticalAlignment="Center"
                    Grid.Column="0"
                    FontSize="20"
                    FontWeight="Bold"
                    />

                <Button 
                    x:Name="ImportButton"
                    Content="Импорт"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Style="{StaticResource ButtonStyle}"
                    Width="100"
                    />
        </Grid>

        <ListBox ItemsSource="{Binding Groups}" Grid.Row="1" HorizontalContentAlignment="Stretch" BorderBrush="Transparent">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Margin="2" Padding="5" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Vertical">
                            
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat='Created: {0:dd.MM.yyyy HH:mm}'}" FontSize="11" Foreground="Gray"/>
                                </StackPanel>

                                <TextBlock 
                                    Grid.Column="1" 
                                    Text="{Binding Signals.Count, StringFormat='Signals: {0}'}" 
                                    VerticalAlignment="Center" Margin="10,0"
                                    
                                    />

                                <Button 
                                    Grid.Column="2" Content="Показать" Margin="10,0,0,0"
                                    Command="{Binding DataContext.OpenGroupCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                    CommandParameter="{Binding}" 
                                    Style="{StaticResource ButtonStyle}"
                                    Width="160"
                                    Height="20"
                                    />
                                
                                <Button 
                                    Grid.Column="3" Content="Export" Margin="10,0,0,0"
                                    Command="{Binding DataContext.ExportGroupCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                    CommandParameter="{Binding}" 
                                    Style="{StaticResource ButtonStyle}"
                                    Width="60"
                                    Height="20"
                                    />
                            </Grid>

                            <ItemsControl ItemsSource="{Binding Signals}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#DDD" BorderThickness="1" Margin="2" Padding="4">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Name, StringFormat='Name: {0}'}"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Type, StringFormat='Type: {0}'}"/>
                                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Amplitude, StringFormat='Amp: {0}'}"/>
                                                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Frequency, StringFormat='Freq: {0}'}"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Phase, StringFormat='Phase: {0}'}"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding NumberOfPoints, StringFormat='Points: {0}'}"/>
                                                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding TimeStart, StringFormat='Start: {0}'}"/>
                                                <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding TimeEnd, StringFormat='End: {0}'}"/>
                                            </Grid>
                                          </Border> 
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="1" Background="#50FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <controls:ProgressRing Width="100" Height="100" IsActive="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Previous" Click="Previous_Click" Margin="5" Style="{StaticResource ButtonStyle}" Width="50" FontSize="10" Height="20"/>
            <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Text=" / " VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center" Margin="5"/>
            <Button Content="Next" Click="Next_Click" Margin="5" Style="{StaticResource ButtonStyle}" Width="50" FontSize="10" Height="20"/>
        </StackPanel>
    </Grid>
</Page>

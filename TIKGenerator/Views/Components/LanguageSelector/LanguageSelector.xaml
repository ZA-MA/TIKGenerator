<UserControl x:Class="TIKGenerator.Views.Components.LanguageSelector.LanguageSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="LanguageSelectorStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <ToggleButton 
            x:Name="BtnRu"   
            Content="RU"        
            Style="{StaticResource LS_ButtonStyle}" 
            Margin="5"
            />

        <ToggleButton 
            x:Name="BtnEn"
            Content="EN" 
            Style="{StaticResource LS_ButtonStyle}"     
            Margin="5"
            />
        
    </StackPanel>

</UserControl>

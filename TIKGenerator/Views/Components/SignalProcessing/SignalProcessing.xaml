<UserControl x:Class="TIKGenerator.Views.Components.SignalProcessing.SignalProcessing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:TIKGenerator.Models"
             Height="Auto" Width="Auto">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="{DynamicResource ProcessingMethod}" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Width="200"
                  SelectedValue="{Binding Processing.SelectedMethod, Mode=TwoWay}"
                  SelectedValuePath="Tag"
                  Style="{StaticResource ComboBoxStyle}">
                <ComboBoxItem Tag="{x:Static models:ProcessingMethod.None}" Content="{DynamicResource None}" />
                <ComboBoxItem Tag="{x:Static models:ProcessingMethod.LowPass}" Content="{DynamicResource LowPass}" />
                <ComboBoxItem Tag="{x:Static models:ProcessingMethod.HighPass}" Content="{DynamicResource HighPass}" />
                <ComboBoxItem Tag="{x:Static models:ProcessingMethod.BandPass}" Content="{DynamicResource BandPass}" />
                <ComboBoxItem Tag="{x:Static models:ProcessingMethod.BandStop}" Content="{DynamicResource BandStop}" />
                <ComboBoxItem Tag="{x:Static models:ProcessingMethod.MovingAverage}" Content="{DynamicResource MovingAverage}" />
                <ComboBoxItem Tag="{x:Static models:ProcessingMethod.ExponentialSmoothing}" Content="{DynamicResource ExponentialSmoothing}" />
                <ComboBoxItem Tag="{x:Static models:ProcessingMethod.FFT}" Content="{DynamicResource FFT}" />
                <ComboBoxItem Tag="{x:Static models:ProcessingMethod.Normalization}" Content="{DynamicResource Normalization}" />
                <ComboBoxItem Tag="{x:Static models:ProcessingMethod.Overlay}" Content="{DynamicResource Overlay}" />
            </ComboBox>
        </StackPanel>

        <Button Grid.Row="0" Grid.Column="1" Content="{DynamicResource Apply}"
                Width="80" Height="25"
                Margin="10,0,0,0"
                Command="{Binding ApplyCommand}"
                Style="{StaticResource ButtonStyle}"/>

        <ContentControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0"
                        Content="{Binding Processing}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <StackPanel />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Content.SelectedMethod, RelativeSource={RelativeSource Self}}"
                             Value="{x:Static models:ProcessingMethod.LowPass}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Граничная частота:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Width="50" Style="{StaticResource TextBoxStyle}" Text="{Binding LowPassCutoff, Mode=TwoWay}" />
                                            <TextBlock Text="Гц" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Content.SelectedMethod, RelativeSource={RelativeSource Self}}"
                             Value="{x:Static models:ProcessingMethod.HighPass}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Граничная частота:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Width="50" Style="{StaticResource TextBoxStyle}" Text="{Binding HighPassCutoff, Mode=TwoWay}" />
                                            <TextBlock Text="Гц" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Content.SelectedMethod, RelativeSource={RelativeSource Self}}"
                             Value="{x:Static models:ProcessingMethod.BandPass}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Диапазон:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Width="50" Style="{StaticResource TextBoxStyle}" Text="{Binding BandPassLow, Mode=TwoWay}" />
                                            <TextBlock Text="-" VerticalAlignment="Center" Margin="3,0,3,0"/>
                                            <TextBox Width="50" Style="{StaticResource TextBoxStyle}" Text="{Binding BandPassHigh, Mode=TwoWay}" />
                                            <TextBlock Text="Гц" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Content.SelectedMethod, RelativeSource={RelativeSource Self}}"
                             Value="{x:Static models:ProcessingMethod.BandStop}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Подавляемый диапазон:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Width="50" Style="{StaticResource TextBoxStyle}" Text="{Binding BandStopLow, Mode=TwoWay}" />
                                            <TextBlock Text="-" VerticalAlignment="Center" Margin="3,0,3,0"/>
                                            <TextBox Width="50" Style="{StaticResource TextBoxStyle}" Text="{Binding BandStopHigh, Mode=TwoWay}" />
                                            <TextBlock Text="Гц" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Content.SelectedMethod, RelativeSource={RelativeSource Self}}"
                             Value="{x:Static models:ProcessingMethod.MovingAverage}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Размер окна:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Width="50" Style="{StaticResource TextBoxStyle}" Text="{Binding MovingAverageWindow, Mode=TwoWay}" />
                                            <TextBlock Text="отсчётов" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Content.SelectedMethod, RelativeSource={RelativeSource Self}}"
                             Value="{x:Static models:ProcessingMethod.ExponentialSmoothing}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Коэффициент сглаживания:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Width="50" Style="{StaticResource TextBoxStyle}" Text="{Binding ExponentialAlpha, Mode=TwoWay}" />
                                            <TextBlock Text="(0.0 - 1.0)" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Gray"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</UserControl>
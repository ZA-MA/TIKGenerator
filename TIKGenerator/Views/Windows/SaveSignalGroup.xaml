<Window x:Class="TIKGenerator.Views.Windows.SaveSignalGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TIKGenerator.Views.Windows"
        xmlns:inputField="clr-namespace:TIKGenerator.Views.Components.InputField"
        mc:Ignorable="d"
        Title="SaveSignalGroup" Height="200" Width="300" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Center">
            <inputField:InputField 
                Label="{DynamicResource Name}" 
                InputType="Text" 
                x:Name="NameField"
                />

            <Button 
                Style="{StaticResource ButtonStyle}" 
                Content="{DynamicResource Generate}" 
                x:Name="SaveButton" 
                Height="30" 
                Width="200"
                Margin="0" 
                Click="SaveButton_Click" 
                />

            <Button 
                Style="{StaticResource ButtonStyle}" 
                Content="{DynamicResource Generate}" 
                x:Name="CancelButton" 
                Height="30" 
                Width="200"
                Margin="0 5" 
                Click="CancelButton_Click" 
                />
        </StackPanel>
    </Grid>
</Window>

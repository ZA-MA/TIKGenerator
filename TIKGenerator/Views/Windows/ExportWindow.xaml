<Window x:Class="TIKGenerator.Views.Windows.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TIKGenerator.Views.Windows"
        mc:Ignorable="d"
        Title="ExportWindow" Height="300" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="Выберите формат:" Margin="0,0,0,5"/>
        <ComboBox x:Name="FormatBox" SelectedIndex="0" Style="{StaticResource ComboBoxStyle}">
            <ComboBoxItem Content="CSV"/>
            <ComboBoxItem Content="JSON"/>
            <ComboBoxItem Content="XML"/>
        </ComboBox>

        <TextBlock Text="Путь и имя файла:" Margin="0,10,0,5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <TextBox x:Name="PathBox" Width="250" Style="{StaticResource TextBoxStyle}"/>
            <Button Content="Обзор..." Margin="5,0,0,0" Width="80" Click="Browse_Click" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>

        <Button 
            Content="Экспортировать" 
            Margin="0,20,0,0" 
            Click="Export_Click" 
            Width="150"
            Style="{StaticResource ButtonStyle}"
            />

        <Button 
            Content="Отмена" 
            Margin="0,10,0,0" 
            Click="CancelButton_Click"
            Width="150"
            Style="{StaticResource ButtonStyle}"
            />
    </StackPanel>
</Window>

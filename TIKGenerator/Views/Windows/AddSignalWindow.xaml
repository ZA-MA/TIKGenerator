<Window 
    x:Class="TIKGenerator.Views.Windows.AddSignalWindow" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:signalType="clr-namespace:TIKGenerator.Models" 
    xmlns:inputField="clr-namespace:TIKGenerator.Views.Components.InputField"
    Title="{DynamicResource AddSignal}" 
    Height="600" Width="350" ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel Grid.Column="0" Margin="0 0 0 0">

            <inputField:InputField Label="{DynamicResource Name}" InputType="Text" x:Name="NameField"/>
            <inputField:InputField Label="{DynamicResource Amplitude}" InputType="Number" x:Name="AmplitudeField"/>
            <inputField:InputField Label="{DynamicResource Frequency}" InputType="Number" x:Name="FrequencyField"/>
            <inputField:InputField Label="{DynamicResource Phase}" InputType="Number" x:Name="PhaseField"/>
            <inputField:InputField Label="{DynamicResource Points}" InputType="Number" x:Name="PointsField"/>
            <inputField:InputField Label="{DynamicResource TimeStart}" InputType="Number" x:Name="TimeStart"/>
            <inputField:InputField Label="{DynamicResource TimeEnd}" InputType="Number" x:Name="TimeEnd"/>

            <ComboBox x:Name="SignalTypeBox" Margin="0 0 0 10" Style="{StaticResource ComboBoxStyle}">
                <ComboBoxItem Content="{DynamicResource SineWave}" Tag="{x:Static signalType:SignalType.SineWave}" IsSelected="True" />
                <ComboBoxItem Content="{DynamicResource Meander}" Tag="{x:Static signalType:SignalType.Meander}" />
                <ComboBoxItem Content="{DynamicResource Triangular}" Tag="{x:Static signalType:SignalType.Triangular}" />
                <ComboBoxItem Content="{DynamicResource Sawtooth}" Tag="{x:Static signalType:SignalType.Sawtooth}" />
            </ComboBox>
            
            <Button Style="{StaticResource ButtonStyle}" Content="{DynamicResource Generate}" x:Name="GenerateButton" Height="30" Margin="0" Click="GenerateButton_Click" />
            <Button Style="{StaticResource ButtonStyle}" Content="{DynamicResource Cancel}" x:Name="CancelButton" Height="30" Margin="0 10" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>